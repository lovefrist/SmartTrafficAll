<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        >

        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/iv_logos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/audi" />

        <TextView
            android:id="@+id/tv_carId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="鲁10001"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="学圆路" />

    <TextView
        android:id="@+id/tv_Reason"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="阿萨&#160;&#160;&#160;&#8201;大实打实啊实打实的"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_Deduction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="6" />

    <TextView
        android:id="@+id/tv_fine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="100" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="2019-10-15\n55:55:55"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="未处理"
        android:gravity="center"
        android:textColor="#DF1232"
        />


</LinearLayout>