<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    >
    <ImageView
        android:id="@+id/iv_carMame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/audi"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_carNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="车号：川NB520"/>
    <TextView
        android:id="@+id/pmoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="罚款：100元"/>
        <TextView
            android:id="@+id/tv_pscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扣分：6分"
            />
    <TextView
        android:id="@+id/tv_paddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地点：学院路"/>
    <TextView
        android:id="@+id/tv_pdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间：2018/30/30"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        >
        <Button
            android:id="@+id/bt_dealer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:background="@drawable/btn_fore"
            android:paddingHorizontal="40dp"
            />

        <Button
            android:id="@+id/bt_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_fore"
            android:text="支付"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="40dp"
            />

    </LinearLayout>


</LinearLayout>