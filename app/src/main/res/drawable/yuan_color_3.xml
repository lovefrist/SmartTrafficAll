<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影部分 -->
    <!-- 个人觉得更形象的表达：top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
    <item
        android:left="5dp"
        android:top="5dp">
        <shape android:shape="oval" >
            <gradient
                android:angle="270"
                android:endColor="#67DCD6D6"
                android:startColor="#1A000000" />
        </shape>
    </item>

    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，
    right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="oval" >

            <gradient
                android:angle="270"
                android:endColor="@color/yuan3"
                android:startColor="@color/yuan3" />
        </shape>
    </item>
</layer-list>